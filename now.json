{
  "version": 2,
  "name": "kistauri",
  "alias": "davidkistauri.now.sh",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "static": {
    "headers": [
      {
        "source": "**/*.@(html)",
        "headers": [
          {
            "key": "Referrer-Policy",
            "value": "no-referrer"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src https:; img-src 'self'; script-src 'self'; style-src 'self'"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Feature-Policy",
            "value": "geolocation 'self'; notifications 'self'; push 'self'; microphone 'self'; camera 'self'"
          }
        ]
      },
      {
        "source": "*",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=63072000"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          }
        ]
      }
    ]
  }
}
