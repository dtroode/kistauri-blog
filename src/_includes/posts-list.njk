<link rel="stylesheet" href="{{ '/styles/article.css' | url }}">
<link rel="stylesheet" href="{{ '/styles/post.css' | url }}">
<link rel="stylesheet" href="{{ '/styles/code.css' | url }}">

{%- for post in postslist | reverse -%}
  <article class="card {% if post.data.category %}{{post.data.category}}{% endif %}">
    <a href="{{ post.url | url }}" class="card__link main__header--subsection">
      {%- if pageClass == "projects" -%}
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
      {%- endif -%}
      {{ post.data.title }}
    </a>
    <section class="main__sect--text">
      <article>
        {{ post.templateContent | safe }}
      </article>
      <p class="postlinks">
        <time datetime="{{ post.date | htmlDateString }}" title="{{ post.date | readableDate }}">{{ post.date | shortDate }}</time>
        {%- for tag in post.data.tags -%}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {%- set tagUrl -%}/blog/tags/{{ tag | slug }}/{%- endset -%}
            <a href="{{ tagUrl | url }}" class="postlinks__a">{{ tag }}</a>
          {%- endif -%}
        {%- endfor -%}
      </p>
    </section>
  </article>
{%- endfor -%}
