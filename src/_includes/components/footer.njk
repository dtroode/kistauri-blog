<footer class="foot">
  {%- if pageClass == "post" -%}
    <section class="foot__sect">
      <h2 class="foot__header">Поделиться</h2>
      <nav class="foot__nav foot__nav--share" aria-label="Поделиться заметкой">
        {%- for link in sharelinks -%}
          <a class="foot__a foot__a--{{link.id}} a--secondary" href="{{link.url_part}}{{metadata.url}}{{page.url}}{%- if link.text_part -%}{{link.text_part}}{{title | sharePostTitle}}{%- endif -%}">
            <svg height="1.5em" width="1em" style="vertical-align: top" fill="currentColor" aria-hidden="true" aria-label="{{link.name}}" focusable="false" data-prefix="fab"class="foot__icon" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <path fill="currentColor" d="{{link.path}}"></path>
            </svg>{{link.name}}
          </a>
        {%- endfor -%}
      </nav>
      <hr>
    </section>
  {%- endif -%}
  <section class="foot__sect">
    <h2 class="foot__header">Подписаться</h2>
    <nav class="foot__nav foot__nav--links" aria-label="Подписаться на меня">
      {%- for link in contacts -%}
        <a class="foot__a a--primary" href="{{link.url}}">
        {%- if link.path -%}
          <svg height="1.5em" width="1em" style="vertical-align: top" fill="currentColor" aria-hidden="true" aria-label="{{link.name}}" focusable="false" data-prefix="fab"class="foot__icon" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
            <path fill="currentColor" d="{{link.path}}"></path>
          </svg>
        {%- endif -%}{{link.name}}</a>
      {%- endfor -%}
    </nav>
  </section>
</footer>
