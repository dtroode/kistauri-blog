<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#2962ff">
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <meta name="robots" content="index,follow">
    <meta name="generator" content="Eleventy">

    <title>{{ renderData.title or title or metadata.title }}</title>

    <!--Twitter Card-->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@{{metadata.twitter}}">
    <meta name="twitter:creator" content="@{{metadata.twitter}}">
    <meta name="twitter:url" content="{{metadata.url}}{{page.url}}">
    <meta name="twitter:title" content="{{title}}">
    <meta name="twitter:description" content="{{ renderData.description or description or metadata.description }}">
    <meta name="twitter:image" content="{{ metadata.url }}{{ image or metadata.image }}">

    <!--Schema-->
    <link rel="author" href="{{metadata.author}}">
    <meta itemprop="name" content="{{title}}">
    <meta itemprop="description" content="{{ renderData.description or description or metadata.description }}">
    <meta itemprop="image" content="{{ metadata.url }}{{ image or metadata.image }}">

    <!-- Facebook OpenGraph -->
    <meta property="og:url" content="{{metadata.url}}{{page.url}}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{title}}">
    <meta property="og:image" content="{{ metadata.url }}{{ image or metadata.image }}">
    <meta property="og:description" content="{{ renderData.description or description or metadata.description }}">
    <meta property="og:site_name" content="{{metadata.title}}">
    <meta property="og:locale" content="ru_RU">
    <meta property="article:author" content="{{metadata.author}}">

    <!-- Preload font -->
    <link rel="preload" href="/fonts/Inter.woff2" as="font" type="font/woff2">

    <!-- Icons -->
    <link rel="apple-touch-icon" sizes="256x256" href="/images/icons/icon-256x256.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/images/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/images/icons/icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="96x96" href="/images/icons/icon-96x96.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/images/icons/icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="48x48" href="/images/icons/icon-48x48.png" />
    <link rel="icon" sizes="256x256" href="/images/icons/icon-256x256.png" type="images/png" />
    <link rel="icon" sizes="192x192" href="/images/icons/icon-192x192.png" type="images/png" />
    <link rel="icon" sizes="144x144" href="/images/icons/icon-144x144.png" type="images/png" />
    <link rel="icon" sizes="96x96" href="/images/icons/icon-96x96.png" type="images/png" />
    <link rel="icon" sizes="72x72" href="/images/icons/icon-72x72.png" type="images/png" />
    <link rel="icon" sizes="48x48" href="/images/icons/icon-48x48.png" type="images/png" />

    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="stylesheet" href="{{ '/styles/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>

    {% include "../components/header.njk" %}
    <main class="main--{{pageClass}}">
      {{ content | safe }}
    </main>
    {% include "../components/footer.njk" %}

    <script>
      if ("serviceWorker" in navigator)
        navigator.serviceWorker.register("/service-worker.js");
    </script>
  </body>
</html>
